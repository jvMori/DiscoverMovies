<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/poster"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/redAccentTransparent" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
            android:paddingRight="5dp" android:paddingLeft="5dp"/>
    <TextView
            android:id="@+id/crewMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:text="Director"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="12sp" android:textStyle="bold"/>
    <TextView
            android:id="@+id/titleCrew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="8dp"
            android:text="Call me by ed your name caaname"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="9sp"/>
</LinearLayout>