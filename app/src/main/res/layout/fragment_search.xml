<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context=".ui.view.search.SearchFragment"
              android:background="@color/colorPrimaryDark"
>
  <LinearLayout android:layout_width="match_parent" android:layout_height="190dp"
                android:orientation="vertical"
                android:background="@drawable/gradient_no_round"
  >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="@color/textGrayed"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:layout_gravity="center"
    />
    <androidx.appcompat.widget.SearchView android:layout_width="match_parent"
                                          android:layout_height="60dp"
                                          app:searchIcon="@drawable/ic_search"
                                          android:background="@drawable/rectangle"
                                          android:layout_margin="8dp"
                                          android:layout_gravity="center"
    />
  </LinearLayout>
  <LinearLayout
          android:id="@+id/noResultsLayout"
          android:orientation="vertical"
          android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
            android:src="@drawable/ic_search_gray"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent" android:layout_height="100dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/no_results_yet"
              android:textColor="@color/grayAccent"
              android:textAlignment="center"
              android:textSize="18sp"
              android:padding="10dp"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/search_for_movies_tv_shows_or_people"
              android:textColor="@color/grayAccent"
              android:textAlignment="center"
              android:textSize="18sp"
              android:padding="10dp"
    />
  </LinearLayout>

</LinearLayout>